{
  "compilerOptions": {
    "noImplicitAny": true,
    // nie pozwalamy na typ any
    "preserveConstEnums": true,
    // pozwalamy na enumy w js
    "sourceMap": true,
    // mapowanie błędów ts<->js
    "target": "ES6",
    //najnowszy es
    "downlevelIteration": true,
    // żeby można było iterować nie tylko tablice np. for in
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    // folder dla produkcyjnej wersji
    "experimentalDecorators": true,
    // te dwie rzeczy niezbędne do dekoratorów
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    //moduły traktowane po node-owemu
    "esModuleInterop": true
    //pozwala na łatwiejsze importy - zamiast import * from 'xyz' to import from 'xyz
  }
}